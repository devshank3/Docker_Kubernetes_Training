FROM mcr.microsoft.com/dotnet/sdk:10.0-alpine AS build
WORKDIR /src
COPY . .
RUN dotnet publish "hello-aspnet-docker.csproj" -c Release -o /published  /p:UseAppHost=false

FROM mcr.microsoft.com/dotnet/aspnet:10.0-alpine
WORKDIR /app
COPY --from=build /published .
ENTRYPOINT [ "dotnet", "hello-aspnet-docker.dll" ]